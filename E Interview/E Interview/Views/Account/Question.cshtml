<style>
    .remove {
        display:block;
    }
</style>
<div class="form-horizontal" style="background-color:#eeeeee; color:inherit; font-size:14px; font-weight:200; line-height:2.14286; margin-bottom:30px; padding:10px; border-radius:6px;">
    <p>@Model.QuestionText</p>
    <ul>
        @{
            string check = "";
        }

        @foreach (var ans in Model.Answers)
        {
            if (Model.UserAnswer == ans)
            {
                check = "checked='checked'";
            }
            else
            {
                check = "";
            }
            
            <li class="remove"><label><input type="radio" name="ans" value="@ans" @check/>@ans</label></li>
        }
    </ul>
    <input type="hidden" value="@Model.RowID" id="current-page" />
    @if (Model.FirstQuestion != true)
    {
        <button class="navigation-button" data-value="-1">Prev</button>
    }


    @if (Model.LastQuestion == true)
    {
        <button class="complete-interview">Submit</button>
    }
    else
    {
        <button class="navigation-button" data-value="1">Next</button>
    }
</div>


